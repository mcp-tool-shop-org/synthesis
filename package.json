{
  "name": "@mcptoolshop/synthesis",
  "version": "0.2.2",
  "description": "Deterministic evaluations for empathy, trust, and care in AI systems",
  "type": "module",
  "keywords": [
    "ai",
    "empathy",
    "evaluation",
    "testing",
    "ethics",
    "trust",
    "safety",
    "deterministic"
  ],
  "homepage": "https://github.com/mcp-tool-shop-org/synthesis#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcp-tool-shop-org/synthesis.git"
  },
  "bugs": {
    "url": "https://github.com/mcp-tool-shop-org/synthesis/issues"
  },
  "author": "mcp-tool-shop",
  "license": "MIT",
  "scripts": {
    "test": "vitest run",
    "build": "tsc -p tsconfig.json",
    "eval": "node dist/index.js --cases data/evals.jsonl --schema schemas/eval_case.schema.json --out out/report.json",
    "dev": "node --import tsx src/index.ts --cases data/evals.jsonl --schema schemas/eval_case.schema.json --out out/report.json"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@vitest/ui": "^3.0.9",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3",
    "vitest": "^3.0.9"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
